<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edttxt_preExp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="right|center"
        android:text=""
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edttxt_rsl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="right|center"
        android:text="0"
        android:textSize="40dp" />


    <TableLayout
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TableRow
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_C"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#A3B3A2"
                android:onClick="keyEvent"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />


            <Button
                android:id="@+id/btn_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#A3B3A2"
                android:onClick="keyEvent"
                android:text="Del"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btn_mod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D6B040"
                android:onClick="keyEvent"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D6B040"
                android:onClick="keyEvent"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="7"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="8"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="9"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D6B040"
                android:onClick="keyEvent"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="4"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="5"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="6"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D6B040"
                android:onClick="keyEvent"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="1"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="keyEvent"
                android:text="2"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_3"
                android:onClick="keyEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D6B040"
                android:onClick="keyEvent"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />
        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_0"
                android:onClick="keyEvent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/btn_dot"
                android:onClick="keyEvent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#FFE390"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                android:text="."/>

            <Button
                android:id="@+id/btn_eql"
                android:onClick="keyEvent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                android:backgroundTint="#D6B040"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="20dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>